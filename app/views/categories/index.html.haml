%p#notice= notice

= link_to 'Product Index', products_path

%h1 Listing categories

%table
  %thead
    %tr
      %th Id
      %th Name
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.id
        %td= link_to category.name, category
        %td= link_to 'Delete ' + category.name, category, method: :delete, data: { confirm: 'Are you sure?' },class:'btn btn-danger'

%br

= link_to 'New Category', new_category_path